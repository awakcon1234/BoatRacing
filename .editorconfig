root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4
tab_width = 4

# Java / Gradle: tabs
[*.{java,gradle,groovy}]
indent_style = tab
indent_size = 4

# YAML must use spaces (tabs are invalid in YAML)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown: keep spaces (avoid breaking lists/code fences alignment)
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Batch scripts: keep CRLF on Windows
[*.{bat,cmd}]
end_of_line = crlf
indent_style = space
indent_size = 4
