# .gitignore for a typical Gradle project

# Gradle build directories
.gradle/
build/
**/build/

# Gradle wrapper - keep wrapper JAR and properties committed
!gradle/wrapper/gradle-wrapper.jar
gradle/wrapper/gradle-wrapper.properties

# Do not ignore wrapper scripts (they are source files)
!gradlew
!gradlew.bat

# Eclipse
.classpath
.project
.settings/

# IntelliJ IDEA
.idea/
*.iml
*.iws
*.ipr

# NetBeans
nbproject/private/

# VS Code
.vscode/

# Compiled class files
*.class

# Generated files
/out/
/dist/
/tmp/

# Logs
*.log

# OS-specific
.DS_Store
Thumbs.db

# Misc
*.tmp
*.swp

# Keep README, license, src and build scripts in repository
!README.md
!LICENSE
!src/**
!build.gradle
!settings.gradle
!gradle.properties
!CHECKLIST.md

